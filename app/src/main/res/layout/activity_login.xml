<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity"
    android:orientation="vertical"
    android:padding="15dp">
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_username_loginA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱/用户名"
        android:layout_marginTop="10dp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_pwd_loginA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btn_login_loginA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="@dimen/space_20"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:background="@drawable/btn_blue_selector"
        />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="还可以使用其他帐号登录"
         android:layout_marginTop="@dimen/space_30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_qq_share_loginA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/share_icon_qq_selector"/>
        <ImageView
            android:id="@+id/iv_wechat_share_loginA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/share_icon_wechat_selector"/>
        <ImageView
            android:id="@+id/iv_sinawweibo_share_loginA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/share_icon_sinaweibo_selector"/>
    </LinearLayout>
</LinearLayout>
