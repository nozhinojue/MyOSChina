<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/list_item_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_text_quick_option"
                style="@style/quick_option_item_layoutStyle"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/day_quickoption_icon_text_selector"
                    />
                <TextView
                    style="@style/quick_option_item_textStyle"
                    android:text="文字"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_album_quick_option"
                style="@style/quick_option_item_layoutStyle"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/day_quickoption_icon_album_selector"
                    />
                <TextView
                    style="@style/quick_option_item_textStyle"
                    android:text="相册"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_photo_quick_option"
                style="@style/quick_option_item_layoutStyle"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/day_quickoption_icon_photo_selector"
                    />
                <TextView
                    style="@style/quick_option_item_textStyle"
                    android:text="拍照"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_voice_quick_option"
                style="@style/quick_option_item_layoutStyle"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/day_quickoption_icon_voice_selector"
                    />
                <TextView
                    style="@style/quick_option_item_textStyle"
                    android:text="语音"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_scan_quick_option"
                style="@style/quick_option_item_layoutStyle"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/day_quickoption_icon_scan_selector"
                    />
                <TextView
                    style="@style/quick_option_item_textStyle"
                    android:text="扫一扫"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_note_quick_option"
                style="@style/quick_option_item_layoutStyle"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/day_quickoption_icon_note_selector"
                    />
                <TextView
                    style="@style/quick_option_item_textStyle"
                    android:text="便签"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>